---
import { ViewTransitions } from 'astro:transitions'

import BackToTop from '../components/BackToTop.astro'

import '@fontsource-variable/nunito/index.css'
import '@fontsource/material-icons/index.css'
import '@fontsource-variable/roboto-flex/index.css'

import 'simplebar/dist/simplebar.min.css'
import '../styles/main.scss'
const { title } = Astro.props
---

<!doctype html>
<html dir="ltr" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="description" content="SignaMind: Semantic data strategy for life sciences. Bridge fragmented biology data with knowledge graphs and semantic architectures for AI readiness." />
    
    <!-- Open Graph Tags -->
    <meta property="og:title" content={title || "SignaMind - Semantic Data Strategy for Life Sciences"} />
    <meta property="og:description" content="SignaMind: Semantic data strategy for life sciences. Bridge fragmented biology data with knowledge graphs and semantic architectures for AI readiness." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.signamind.com" />
    <meta property="og:image" content="https://images.unsplash.com/photo-1558494949-ef010cbdcc31?w=1200&q=80" />
    
    <!-- Twitter Card Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title || "SignaMind - Semantic Data Strategy for Life Sciences"} />
    <meta name="twitter:description" content="SignaMind: Semantic data strategy for life sciences. Bridge fragmented biology data with knowledge graphs." />
    <meta name="twitter:image" content="https://images.unsplash.com/photo-1558494949-ef010cbdcc31?w=1200&q=80" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href="https://www.signamind.com" />
    
    <ViewTransitions />
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "SignaMind",
      "url": "https://www.signamind.com",
      "description": "Semantic data strategy for life sciences organizations",
      "logo": "https://www.signamind.com/img/logo.png",
      "contact": {
        "@type": "ContactPoint",
        "contactType": "Sales",
        "email": "hello@signamind.com"
      }
    }
    </script>

    <!-- Google Tag Manager -->
    <script>
      ;(function (w, d, s, l, i) {
        w[l] = w[l] || []
        w[l].push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' })
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != 'dataLayer' ? '&l=' + l : ''
        //@ts-ignore
        j.async = true
        //@ts-ignore
        j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl
        f.parentNode.insertBefore(j, f)
      })(window, document, 'script', 'dataLayer', 'GTM-PV65Z24')
    </script>
    <!-- End Google Tag Manager -->

    <link rel="icon" type="image/png" href="/img/signamind-favicon.png" />
  </head>

  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-PV65Z24" height="0" width="0" style="display:none;visibility:hidden"></iframe> </noscript>
    <!-- End Google Tag Manager (noscript) -->

    <!--page partial-->
    <slot />

    <!--Back to top-->
    <BackToTop />

    <script src="../js/main"></script>
  </body>
</html>
